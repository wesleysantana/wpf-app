<Window x:Class="WpfApp.Views.PedidosConsultaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Consulta de Pedidos" Height="520" Width="900"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Filtros -->
            <RowDefinition Height="*"/>
            <!-- Grid -->
            <RowDefinition Height="Auto"/>
            <!-- Rodapé -->
        </Grid.RowDefinitions>

        <!-- FILTROS -->
        <GroupBox Header="Filtros" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Content="Pessoa:" VerticalAlignment="Center"/>
                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding PessoasCollection}"
                          SelectedItem="{Binding PessoaSelecionada}"
                          DisplayMemberPath="Nome"
                          IsSynchronizedWithCurrentItem="True"/>

                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                    <CheckBox Content="Pendentes"   IsChecked="{Binding IsPendentes}" Margin="0,0,10,0"/>
                    <CheckBox Content="Pagos"     IsChecked="{Binding IsPagos}"     Margin="0,0,10,0"/>
                    <CheckBox Content="Enviados"   IsChecked="{Binding IsEnviados}" Margin="0,0,10,0"/>
                    <CheckBox Content="Recebidos" IsChecked="{Binding IsRecebidos}" Margin="0,0,10,0"/>
                </StackPanel>

                <Label Content="Pagto:" VerticalAlignment="Center" Grid.Column="5"/>
                <ComboBox Grid.Column="6" Margin="0,0,10,0"
                    ItemsSource="{Binding PagamentosFiltro}"
                    DisplayMemberPath="Key"
                    SelectedValuePath="Value"
                    SelectedValue="{Binding FiltroFormaPagamento, UpdateSourceTrigger=PropertyChanged}"/>

                <StackPanel Grid.Column="7" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Command="{Binding FiltrarCmd}" Margin="4,0,8,0" Width="57">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/filter.png" Width="16" Height="16" Margin="0,0,6,0"/>
                            <TextBlock Text="Filtrar"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- GRID -->
        <GroupBox Grid.Row="1" Header="Pedidos" Padding="8" Margin="0,8,0,8">
            <DataGrid ItemsSource="{Binding PedidosCollection}"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                SelectionMode="Single"
                SelectionUnit="FullRow">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Data"
                            Binding="{Binding DataVenda, StringFormat=\{0:dd/MM/yyyy\}}"
                            Width="100"/>
                    <DataGridTextColumn Header="Pessoa" Binding="{Binding PessoaNome}" Width="*"/>
                    <DataGridTextColumn Header="Valor Total"
                            Binding="{Binding ValorTotal, StringFormat=\{0:C2\},ConverterCulture='pt-BR'}"
                            Width="110"/>
                    <DataGridTextColumn Header="Pagamento" Binding="{Binding FormaPagamento}" Width="110"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="90"/>
                    <DataGridTemplateColumn Header="Ações" Width="220">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Pago"
                                Command="{Binding DataContext.MarcarPagoCmd, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                CommandParameter="{Binding Id}" Margin="0,0,6,0"/>
                                    <Button Content="Enviado"
                                Command="{Binding DataContext.MarcarEnviadoCmd, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                CommandParameter="{Binding Id}" Margin="0,0,6,0"/>
                                    <Button Content="Recebido"
                                Command="{Binding DataContext.MarcarRecebidoCmd, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                CommandParameter="{Binding Id}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- RODAPÉ -->
        <!-- RODAPÉ -->
        <DockPanel Grid.Row="2" LastChildFill="False" Margin="0,4,0,0">
            <!-- À ESQUERDA: totais -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <TextBlock Text="{Binding TotalPedidos, StringFormat=Total de pedidos: {0}}"
               VerticalAlignment="Center" Margin="0,0,12,0"/>
                <TextBlock Text="{Binding TotalValorPedidos, StringFormat=Valor total: {0:C2},ConverterCulture='pt-BR'}"
               FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- À DIREITA: botão Novo Pedido -->
            <Button DockPanel.Dock="Right"
                Command="{Binding NovoPedidoCmd}"
                IsEnabled="{Binding PodeNovoPedido}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/insert-order.png" Width="16" Height="16" Margin="0,0,6,0"/>
                    <TextBlock Text="Novo Pedido"/>
                </StackPanel>
            </Button>
        </DockPanel>

    </Grid>
</Window>
