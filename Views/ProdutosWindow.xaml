<Window x:Class="WpfApp.Views.ProdutosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Produtos" Height="500" Width="800" WindowStartupLocation="CenterScreen">

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filtros + Ações com quebra de linha -->
        <WrapPanel Margin="0,0,0,8">
            <!-- Nome -->
            <StackPanel Width="220" Margin="0,0,12,8">
                <TextBlock Text="Nome" FontWeight="Bold" Margin="0,0,0,4"/>
                <TextBox Width="220"
                     Text="{Binding FiltroNome, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <!-- Código -->
            <StackPanel Width="160" Margin="0,0,12,8">
                <TextBlock Text="Código" FontWeight="Bold" Margin="0,0,0,4"/>
                <TextBox Width="160"
                     Text="{Binding FiltroCodigo, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <!-- Valor Mínimo -->
            <StackPanel Width="110" Margin="0,0,12,8">
                <TextBlock Text="Valor mín." FontWeight="Bold" Margin="0,0,0,4"/>
                <TextBox Width="110"
                     Text="{Binding FiltroMin, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <!-- Valor Máximo -->
            <StackPanel Width="110" Margin="0,0,12,8">
                <TextBlock Text="Valor máx." FontWeight="Bold" Margin="0,0,0,4"/>
                <TextBox Width="110"
                     Text="{Binding FiltroMax, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <!-- Botões (também quebram de linha se faltar espaço) -->
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <Button Command="{Binding FiltrarCmd}" Margin="0,0,8,8">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/filter.png" Width="16" Height="16" Margin="2,0,6,0"/>
                        <TextBlock Text="Filtrar"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding IncluirCmd}" Margin="0,0,8,8">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/insert.png" Width="16" Height="16" Margin="2,0,6,0"/>
                        <TextBlock Text="Incluir"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding SalvarCmd}" Margin="0,0,8,8">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/save.png" Width="16" Height="16" Margin="2,0,6,0"/>
                        <TextBlock Text="Salvar"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding ExcluirCmd}" Margin="0,0,8,8">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/garbage.png" Width="16" Height="16" Margin="2,0,6,0"/>
                        <TextBlock Text="Excluir"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </WrapPanel>

        <!-- DataGrid permanece igual -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Produtos}"
              SelectedItem="{Binding ProdutoSelecionado}"
              AutoGenerateColumns="False" IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" IsReadOnly="True" Width="60"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="Código" Binding="{Binding Codigo}" Width="150"/>
                <DataGridTextColumn Header="Valor" Binding="{Binding Valor}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>

</Window>
