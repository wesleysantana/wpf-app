<Window x:Class="WpfApp.Views.PedidosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:models="clr-namespace:WpfApp.Models"
        Title="Pedido" Height="560" Width="900" WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <!-- Fonte de dados para o enum FormaPagamento -->
        <ObjectDataProvider x:Key="FormaPagamentoValues"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:FormaPagamento"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- Cabeçalho / seleção -->
            <RowDefinition Height="Auto"/>
            <!-- Itens -->
            <RowDefinition Height="*"/>
            <!-- Rodapé -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- CABEÇALHO: Pessoa + Forma de pagamento -->
        <GroupBox Header="Dados do Pedido" Padding="8" Margin="0,0,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="180"/>
                </Grid.ColumnDefinitions>

                <Label Content="Pessoa:" VerticalAlignment="Center" Margin="0,0,0,2"/>
                <ComboBox Grid.Column="1" Height="20"
                          ItemsSource="{Binding PessoasCollection}"
                          SelectedItem="{Binding PessoaSelecionada}"
                          DisplayMemberPath="Nome"
                          ToolTip="Selecione o cliente"/>

                <Label Grid.Column="3" Content="Forma de Pagamento:" VerticalAlignment="Center"/>
                <ComboBox Grid.Column="4" Height="20"
                          ItemsSource="{Binding Source={StaticResource FormaPagamentoValues}}"
                          SelectedItem="{Binding FormaPagamento}"
                          ToolTip="Selecione a forma de pagamento"/>
            </Grid>
        </GroupBox>

        <!-- LINHA DE ADIÇÃO: Produto + Quantidade + Adicionar -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,64,0,8" HorizontalAlignment="Left">
            <StackPanel.Resources>
                <Style TargetType="FrameworkElement">
                    <Setter Property="Margin" Value="0,0,8,0"/>
                </Style>
            </StackPanel.Resources>
            <Label Content="Produto:" Margin="14,0,0,2"/>
            <ComboBox Width="308" Height="20"
                      ItemsSource="{Binding ProdutosCollection}"
                      SelectedItem="{Binding ProdutoSelecionado}"
                      DisplayMemberPath="Nome"
                      ToolTip="Escolha um produto"/>

            <Label Content="Qtd.:" Margin="14,0,0,2"/>
            <xctk:IntegerUpDown Width="80" Height="20"
                                Minimum="1"
                                Value="{Binding Quantidade, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Command="{Binding AdicionarItemCmd}" Width="99" Height="20" Margin="14,0,0,2">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/insert.png" Width="16" Height="16" Margin="0,0,6,0"/>
                    <TextBlock Text="Adicionar"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- GRID DE ITENS -->
        <GroupBox Grid.Row="1" Header="Itens do Pedido" Padding="8" Margin="0,8,0,8">
            <DataGrid ItemsSource="{Binding ItensCollection}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Produto" Binding="{Binding ProdutoNome}" Width="*"/>
                    <DataGridTextColumn Header="Valor Unit." 
                                        Binding="{Binding ValorUnitario, StringFormat=\{0:C2\},ConverterCulture='pt-BR'}" Width="120"/>                    
                    <DataGridTextColumn Header="Qtd." Binding="{Binding Quantidade}" Width="80"/>
                    <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, 
                        StringFormat=\{0:C2\},ConverterCulture='pt-BR'}" Width="120"/>
                    <DataGridTemplateColumn Header="Ações" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.RemoverItemCmd, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Resources/garbage.png" Width="16" Height="16" Margin="0,0,6,0"/>
                                        <TextBlock Text="Remover"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- RODAPÉ: Total + Finalizar/Cancelar -->
        <DockPanel Grid.Row="2">
            <TextBlock Text="{Binding ValorTotal, StringFormat='Total: {0:C2}'}"
                       FontSize="16" FontWeight="Bold" VerticalAlignment="Center" DockPanel.Dock="Left"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <StackPanel.Resources>
                    <Style TargetType="FrameworkElement">
                        <Setter Property="Margin" Value="0,0,8,0"/>
                    </Style>
                </StackPanel.Resources>
                <Button Command="{Binding FinalizarCmd}" Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/save.png" Width="16" Height="16" Margin="0,0,6,0"/>
                        <TextBlock Text="Finalizar"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding CancelarCmd}" Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/cancel.png" Width="16" Height="16" Margin="0,0,6,0"/>
                        <TextBlock Text="Cancelar"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </DockPanel>

    </Grid>
</Window>
