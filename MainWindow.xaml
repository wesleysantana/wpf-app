<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Sales" Height="450" Width="800" WindowStartupLocation="CenterScreen">

    <DockPanel Background="White">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="16,8,16,8">
            <Button Click="OpenPeople" Margin="8,0,0,0" Height="36" Padding="16,0"
                    Background="#FF1976D2" Foreground="White" BorderThickness="0" Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="👥" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="Pessoas" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Click="OpenProducts" Margin="8,0,0,0" Height="36" Padding="16,0"
                    Background="#FF1976D2" Foreground="White" BorderThickness="0" Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📦" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="Produtos" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Click="OpenOrders" Margin="8,0,0,0" Height="36" Padding="16,0"
                    Background="#FF1976D2" Foreground="White" BorderThickness="0" Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📋" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="Pedidos" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Click="OpenConsultationOrders" Margin="8,0,0,0" Height="36" Padding="16,0"
                    Background="#FF1976D2" Foreground="White" BorderThickness="0" Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🔍" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="Ver Pedidos" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <Image 
               Width="452" 
               Height="235" 
               Stretch="Uniform"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
    </DockPanel>
</Window>